 //atualizar evento------------------------------------------------------
 
 PUT - http://localhost:8080/api/eventos/{idEvento}
 
 {
	"usuario": "alterado",
	"nome":"alterado",
	"categoria":"alterado",
	"qtdPessoa":"150",
